

{{#each reviews as |review|}}
<div class="reviews" data-id="{{review.id}}">
  <h4>Comment</h4>
     <input type='text' class='reviewcomment' name='review[comment]' value="{{comment}}">
     <h4>Rating</h4>
      <input type='text' class='reviewrating' name='review[rating]' value="{{rating}}">
    <div>
     <button class="delete-reviews" type="click">DELETE</button>
     <input class="edit-reviews" type="submit" value="EDIT">
</div>
{{/each}}
