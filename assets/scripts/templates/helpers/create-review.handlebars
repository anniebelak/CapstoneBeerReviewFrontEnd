<div class="createreviews" data-id="{{review.id}}">
<div class='chosen-beer' data-id="{{beer.id}}">
  <h4>Beer:{{beer.name}}</h4>
  <h4>Type:{{beer.beer_type}}</h4>
   <h4>Description:{{beer.description}}</h4>
   <button class='select-beer' type='click'>Select Beer to Review</button>

   {{#each reviews as |review|}}

<div class="createreviews" data-id="{{review.id}}">
  <h4>Comment</h4>
  <form id="creatingReview">
     <input type='text' class='reviewcomment' name='review[comment]' value="{{comment}}">
     <h4>Rating</h4>
      <input type='text' class='reviewrating' name='review[rating]' value="{{rating}}">
        <input class="sucessCreate" type="submit" name="submit" value="Create Review">
      </form>
</div>
{{/each}}
