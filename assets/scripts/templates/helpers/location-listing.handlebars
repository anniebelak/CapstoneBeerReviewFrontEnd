

{{#each locations as |location|}}
<div class="location" data-id="{{location.id}}">
  <h2>Brewery: {{name}}</h2>
    <h4>Address:{{address}}</h4>
    {{#each location.beers as |beer|}}
    <div class="beer" data-id="{{beer.id}}">
    <h4>Beer:{{beer.name}}</h4>
    <h4>Type:{{beer.beer_type}}</h4>
     <h4>Description:{{beer.description}}</h4>
     <button class='select-beer' type='click'>Select Beer to Review</button>
</div>
</div>
{{/each}}
{{/each}}
