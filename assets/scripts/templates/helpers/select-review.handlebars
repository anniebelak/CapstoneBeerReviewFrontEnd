
<div class="chosen-review" data-id="{{review.id}}">
    <div class="beer" data-id="{{review.beer.id}}">
    <h4>Beer:{{review.beer.name}}</h4>
    <h4>Type:{{review.beer.beer_type}}</h4>
     <h4>Description:{{review.beer.description}}</h4>
     <div id="review-form">
       <form id="updateReview">
         <fieldset>
           <input type='hidden' name='review[review_id]' value="{{review.id}}">
            <input type='hidden' name='review[beer_id]' value="{{review.beer.id}}">
             <h4>Comment</h4>
          <input type='text' class='reviewcomment' name='review[comment]' value="{{review.comment}}">
          <h4>How hoppy was it?</h4>
          <div class="dropdown">
            <select id="ratingdropdown" name='review[rating]'value="{{review.rating}}">
                           <option value="Super Hoppy">Super Hoppy</option>
                           <option value="Mild Hops">Mild Hops</option>
                           <option value="Where are the hops?">Where are the hops?</option>
                         </select>
                       </div>
           <br>
           <input type='submit' class="sucessEdit" name="submit" value="Edit Review">
           </fieldset
            </form>
           </div>
           </div>
         </div>
       </div>
